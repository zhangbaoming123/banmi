<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mywallet.activity.MyWalletActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/white"
        android:id="@+id/mywallet_toolbar"
        ></android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_370"
        android:layout_height="@dimen/dp_180"
        android:layout_margin="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/dp_10"
        app:cardBackgroundColor="@color/yellow"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_119"
                android:layout_marginRight="@dimen/dp_138"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_63"
                android:layout_marginLeft="@dimen/dp_190"
                android:layout_marginRight="@dimen/dp_123"
                />
            <Button
                android:id="@+id/btn_bonus"
                android:layout_width="@dimen/dp_92"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/shape_wallet"
                android:text="赢取奖金"
                android:textColor="@color/yellow"
                android:layout_marginTop="@dimen/dp_120"
                android:layout_marginLeft="@dimen/dp_60"
                />
            <Button
                android:id="@+id/btn_recharge"
                android:layout_width="@dimen/dp_92"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/shape_wallet"
                android:text="去充值"
                android:textColor="@color/yellow"
                android:layout_marginTop="@dimen/dp_120"
                android:layout_marginLeft="@dimen/dp_188"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用记录"
        android:layout_marginTop="@dimen/dp_231"
        android:layout_marginLeft="@dimen/dp_14"
        android:id="@+id/tv"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/mywallet_recycler"
        android:layout_below="@id/tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_10"
        ></android.support.v7.widget.RecyclerView>
</RelativeLayout>