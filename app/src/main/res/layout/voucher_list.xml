<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="355dp"
        android:layout_height="100dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#ffffff"
        app:cardMaxElevation="8dp"
        app:cardPreventCornerOverlap="true"
        android:layout_centerHorizontal="true"
        app:cardElevation="8dp"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@mipmap/icon_me_kaquan"
                android:layout_centerVertical="true"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="11dp"
                android:id="@+id/voucher_img"
                />
            <TextView
                android:id="@+id/voucher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_marginLeft="103dp"
                android:layout_marginTop="29dp"
                android:textStyle="bold"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/voucher_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="103dp"
                android:layout_marginTop="65dp"
                android:text="有效期至：2017-11-1"
                />
            <View
                android:layout_width="3dp"
                android:layout_height="83dp"
                android:background="@drawable/shape"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="244dp"
                android:layout_marginBottom="9dp"
                ></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="40dp"
                android:textColor="#FA6A13"
                android:layout_marginLeft="261dp"
                android:layout_marginTop="32dp"
                />
            <TextView
                android:id="@+id/voucher_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="#FA6A13"
                android:textSize="48dp"
                android:layout_marginLeft="284dp"
                android:layout_marginTop="25dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>