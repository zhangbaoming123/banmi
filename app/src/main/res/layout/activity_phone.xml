        android:layout_height="@dimen/dp_5" />


    <Button
        android:id="@+id/btn_send_verif"
        android:layout_marginLeft="@dimen/dp_273"
        android:layout_marginTop="@dimen/dp_249"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_20"
        android:text="发送验证码"
        android:textColor="#FFFEFEFE"
        android:textSize="@dimen/sp_14"/>


    <!--<ImageView
        android:layout_marginLeft="@dimen/dp_263"
        android:layout_marginTop="@dimen/dp_244"
        android:layout_width="@dimen/dp_90"
        android:background="@drawable/button_unavailable"
        android:layout_height="@dimen/dp_30" />

    <TextView
       android:layout_marginLeft="@dimen/dp_273"
       android:layout_marginTop="@dimen/dp_249"
       android:layout_width="@dimen/dp_70"
       android:layout_height="@dimen/dp_20"
       android:text="发送验证码"
       android:textColor="#FFFEFEFE"
       android:textSize="@dimen/sp_14"
       />-->

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dp_329"
        android:layout_height="@dimen/dp_1"
        android:background="#FFFA6A13"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_279"
        />

    <TextView
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="@dimen/dp_209"
        android:layout_height="@dimen/dp_18"
        android:text="登录或注册即同意伴米旅行"
        android:textColor="#FF999999"
        android:textSize="@dimen/sp_13"
        android:layout_marginLeft="@dimen/dp_83"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_18"
        android:text="用户协议"
        android:textColor="#FA6A13"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="629dp"
        android:layout_marginLeft="@dimen/dp_239"
        android:layout_alignParentBottom="true"
        />

