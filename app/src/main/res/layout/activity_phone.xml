        android:layout_marginTop="@dimen/dp_249"
        android:layout_marginLeft="@dimen/dp_53"
        android:textColor="#FF636363"
        android:textSize="@dimen/sp_14"
        />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="@dimen/dp_117"
        android:layout_height="@dimen/dp_25"
        android:hint="请输入手机号码"
        android:background="@null"
        android:textColor="#FFC8C8C8"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_106"
        android:layout_marginTop="@dimen/dp_246"
        />


    <ImageView
        android:layout_marginLeft="@dimen/dp_83"
        android:layout_marginTop="@dimen/dp_257"
