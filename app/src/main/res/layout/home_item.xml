<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        app:cardCornerRadius="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="@dimen/dp_335"
            android:layout_height="450dp"
            android:background="#99ffffff">

            <ImageView
                android:id="@+id/bgg_img"
                android:layout_width="@dimen/dp_335"
                android:layout_height="450dp"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="@dimen/dp_335"
                android:layout_height="@dimen/dp_116">


                <TextView
                    android:id="@+id/ih_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_marginTop="@dimen/dp_23"
                    android:text="东京"
                    android:textColor="#999989"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/ih_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_42"
                    android:text="银座"
                    android:textColor="#373737"
                    android:textSize="26sp" />

                <Button
                    android:id="@+id/ih_btn"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_29"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_34"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/shape_home_btn"
                    android:text="￥28.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/ih_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ih_tv2"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="疯狂购物买买买"
                    android:textColor="#636363"
                    android:textSize="@dimen/dp_18" />

                <TextView
                    android:id="@+id/purchasedTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ih_btn"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="530人购买"
                    android:textColor="#636363"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
