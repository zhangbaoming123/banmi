<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mycoupon.activity.ViewPingActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="#ffffff"
        android:id="@+id/vp_toolbar"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代金券详情"
            android:layout_gravity="center_horizontal"
            />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="7dp"
        android:layout_below="@id/vp_toolbar"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/view_iv"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/icon_me_kaquan" />

            <TextView
                android:layout_width="185dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@id/view_iv"
                android:text="“伴米旅行”20元代金券"
                android:textColor="#333333"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginLeft="96dp"
                android:layout_marginTop="67dp"
                android:text="有效期至：2017-11-1" />

            <View
                android:layout_width="335dp"
                android:layout_height="2dp"
                android:background="#FA6A13"
                android:layout_marginTop="111dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="21dp"
                android:text="代金券码："
                android:textColor="#FA6A13"
                android:textSize="18sp"
                android:layout_marginTop="133dp"
                android:layout_marginLeft="77dp"/>

            <TextView
                android:layout_width="96dp"
                android:layout_height="23dp"
                android:text="abexuomyg"
                android:textColor="#FA6A13"
                android:textSize="18sp"
                android:layout_marginTop="131dp"
                android:layout_marginLeft="167dp"/>
            <Button
                android:id="@+id/coupon_btn"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="兑换"
                android:layout_marginLeft="153dp"
                android:layout_marginTop="170dp"
                android:background="@drawable/shape_btn_dui"/>
        </RelativeLayout>
        </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="70dp"
        android:layout_height="19dp"
        android:text="使用流程："
        android:textColor="#999999"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="320dp"/>
    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="66dp"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="350dp">
        <TextView
            android:layout_width="175dp"
            android:layout_height="19dp"
            android:textColor="#999999"
            android:text="1.下载注册“一家民宿app”"/>
        <TextView
            android:layout_width="175dp"
            android:layout_height="19dp"
            android:textColor="#999999"
            android:layout_marginTop="5dp"
            android:text="2.注册并登录；”"/>
        <!---->
        <TextView
            android:layout_width="175dp"
            android:layout_height="19dp"
            android:textColor="#999999"
            android:layout_marginTop="5dp"
            android:text="3.填写代金券码"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="430dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:text="1.有效期至2017年11月1日；"
            android:textColor="#999999"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:text="2.代金券不兑现不找零；"/>
    </LinearLayout>
</RelativeLayout>