<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_120"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_12"
        app:cardUseCompatPadding="true"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorCard"
        app:cardCornerRadius="@dimen/dp_6"
        app:cardElevation="@dimen/dp_2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/banmi_img"
                android:scaleType="fitXY"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:id="@+id/banmi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杨晨"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_22"
                android:layout_toRightOf="@id/banmi_img"
                android:layout_margin="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/banmi_about"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_17"
                android:text="248人关注"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_toRightOf="@id/banmi_img"
                android:layout_marginLeft="@dimen/dp_10"/>
            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_70"
                android:layout_toRightOf="@id/banmi_img"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/icon_me_fankui"/>
            <TextView
                android:id="@+id/address"
                android:layout_toRightOf="@id/img"
                android:layout_marginTop="@dimen/dp_67"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="东京"/>

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_12"
                android:src="@drawable/icon_me_fankui"
                android:layout_toRightOf="@id/banmi_img"
                android:layout_marginTop="@dimen/dp_90"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/banmi_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日本国家旅游局专栏作者"
                android:textColor="#FF999999"
                android:textSize="@dimen/sp_12"
                android:layout_toRightOf="@id/banmi_img"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_87"/>
            
            <CheckBox
                android:id="@+id/banmi_collect"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:button="@null"
                android:background="@drawable/banmi_collect_select"
                android:layout_margin="@dimen/dp_10"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
